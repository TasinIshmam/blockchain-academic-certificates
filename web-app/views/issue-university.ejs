<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Blockchain Certificate</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body class="bg-light">
<%- include('partials/navbar-partial.ejs') %>

<!--// Major-->
<!--// CGPA-->
<!--// Date of Issue-->
<!--// Name of student-->
<!--// Email of student-->
<!--//-->


<div class="row justify-content-center form-all">
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title mt-2">Issue Certificate</h4>
            </header>
            <article class="card-body">

                <form action="/university/issue" method="POST">
                    <div class="form-row">
                        <div class="col form-group">
                            <userName>Student Name </userName>
                            <input name="studentName" required type="text" class="form-control" placeholder="">
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <userName>Email</userName>
                            <input name="studentEmail" required type="email" class="form-control" placeholder=" ">
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col form-group">
                                <userName>Major</userName>
                                <input name="major" required type="text" class="form-control" placeholder="">
                            </div> <!-- form-group end.// -->
                            <div class="col form-group">
                                <userName>CGPA</userName>
                                <input name="cgpa" required type="number" class="form-control" step="0.1" min="0" max="4">
                            </div> <!-- form-group end.// -->
                        </div> <!-- form-group end.// -->
                        <!-- form-group end.// -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <userName>Department Name</userName>
                                <input name="department" required type="text" class="form-control">
                            </div> <!-- form-group end.// -->
                            <div class="form-group col-md-6">
                                <userName>Date of Issue</userName>
                                <input name="date" required type="date" class="form-control">
                            </div> <!-- form-group end.// -->
                        </div> <!-- form-row.// -->
                        <button type="submit" class="btn btn-primary btn-block"> Issue </button>
                    </div> <!-- form-group// -->
                </form>
            </article> <!-- card-body end .// -->
    </div> <!-- col.//-->

</div> <!-- row.//-->


</div>
<!--container end.//-->


</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
